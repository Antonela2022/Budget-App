<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlanificareaBugetuluiPersonal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#8FCA8B</item>
        <item name="colorPrimaryVariant">#5D9C59</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#8FCA8B</item>
        <item name="colorSecondaryVariant">#5D9C59</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginTextInputOuterFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="LoginTextInputInnerFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Theme.PlanificareaBugetuluiPersonal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PlanificareaBugetuluiPersonal.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PlanificareaBugetuluiPersonal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TietTextColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">#0B0101</item>
    </style>

    <style name="TietTextColor.BackgroundColor">
        <item name="boxBackgroundColor">#C2C1C3</item>
    </style>

    <style name="Button">
        <item name="backgroundTint">#5D9C59</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="AllCardView">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">45dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <style name="RadioButton">
        <item name="android:textSize">20dp</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlanificareaBugetuluiPersonal" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Quiz.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Quiz.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
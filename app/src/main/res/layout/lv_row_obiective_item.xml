<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lv_background">

    <TextView
        android:id="@+id/row_item_tv_obiective_nume"

        android:layout_width="0dp"
        android:layout_height="wrap_content"


        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/nume_obiectiv"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/row_item_obiective_valoare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_item_obiective_valoare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/valoare_obiectiv_lv"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="8dp"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/row_item_tv_obiective_valuta"
        app:layout_constraintStart_toEndOf="@+id/row_item_tv_obiective_nume"

        />

    <TextView
        android:id="@+id/row_item_tv_obiective_valuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/ron_obiective"

        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/row_item_tv_obiective_status"
        app:layout_constraintStart_toEndOf="@+id/row_item_obiective_valoare"

        android:textAllCaps="true"
        />


    <TextView
        android:id="@+id/row_item_tv_obiective_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/status_obiective"

        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/row_item_tv_obiective_valuta"

        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>
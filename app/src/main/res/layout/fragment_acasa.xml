<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AcasaFragment">



    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/popa_antonela_tv_title_salut"
        style="@style/TietTextColor"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="32dp"
        android:text="@string/acasa_buna_popescu_ana"


        android:textAlignment="center"
        android:textSize="28dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>



    <androidx.cardview.widget.CardView
        android:id="@+id/popa_antonela_cv_acasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popa_antonela_tv_title_salut"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"

        app:cardBackgroundColor="@color/cardview_shadow_start_color"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/popa_antonela_tv_venit_total"
                style="@style/TietTextColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="12dp"
                android:text="Total venituri : 0"



                android:textSize="15dp"
                android:textStyle="bold"

                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>


            <TextView
                android:id="@+id/popa_antonela_tv_cheltuieli_total"
                style="@style/TietTextColor"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="12dp"
                android:text="Total cheltuieli : 0"



                android:textSize="15dp"
                android:textStyle="bold"

                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>





            <TextView
                android:id="@+id/popa_antonela_tv_buget_ramas"
                style="@style/TietTextColor"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="12dp"
                android:text="Buget ramas : 0"



                android:textSize="15dp"
                android:textStyle="bold"

                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/popa_antonela_tv_fond_de_urgente"
                style="@style/TietTextColor"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="12dp"
                android:text="Fond de urgenta : 0"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>


            <Button
                android:id="@+id/popa_antonela_btn_adauga_venituri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                style="@style/Button"
                android:text="Adauga venit" />




            <Button
                android:id="@+id/popa_antonela_btn_seteaza_buget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                style="@style/Button"
                android:text="Seteaza bugetele" />


            <Button
                android:id="@+id/popa_antonela_btn_adauga_cheltuieli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                style="@style/Button"
                android:text="Adauga cheltuieli" />


            <Button
                android:id="@+id/popa_antonela_btn_seteaza_obiective"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                style="@style/Button"
                android:text="Adauga obiective" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        app:layout_constraintTop_toBottomOf="@+id/popa_antonela_cv_acasa"
        android:layout_marginTop="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:progressDrawable="@drawable/custom_progress_bar">

    </ProgressBar>

    <TextView
        android:id="@+id/popa_antonela_tv_progress_bar_procentaj"
        style="@style/TietTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-smallcaps"

        android:text="@string/procentaj_progress_bar"


        android:textAlignment="center"
        android:textSize="12dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_bar">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>